@using Entities.ViewModels.Products
@model CreateProductViewModel
 @{
    ViewData["Title"] = "Create product";
 }
 <h1>New product</h1>
<a asp-action="Products" style="margin-right:100%" 
     class="btn btn-primary">
     Products  
</a>
<form method="post" asp-controller="Products" asp-action="Create">
    <div asp-validation-summary="ModelOnly" id="myCustomSummary" class="text-danger" style="margin:auto"></div>
    <div class="form-group">
        <label asp-for="Name">Product name</label><br />
        <input asp-for="Name" style='width:300px;margin:auto' class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DefaultQuantity">Default quantity</label><br />
        <input asp-for="DefaultQuantity" style='width:300px;margin:auto' class="form-control"/>
        <span asp-validation-for="DefaultQuantity" class="text-danger"></span>
    </div>
    <div style="margin-top:15px">
        <button type="submit" class="btn btn-success">Create</button>
    </div>
</form>