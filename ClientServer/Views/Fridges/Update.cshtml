@using Entities.ViewModels.Fridges
@model UpdateFridgeViewModel
 @{
    ViewData["Title"] = "Update fridge";
 }
 <h1>Update fridge</h1>
<a asp-action="Fridge" asp-route-id="@Model.Id" style="margin-right:100%" 
     class="btn btn-primary">
     Back  
</a>
<form method="post" asp-action="Update">
    <div asp-validation-summary="ModelOnly" id="myCustomSummary" class="text-danger" style="margin:auto"></div>
    <div class="form-group">
        <label asp-for="Name">Fridge name</label><br />
        <input asp-for="Name" value="@Model.Name"
         style='width:300px;margin:auto' class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="OwnerName">Owner name</label><br />
        <input asp-for="OwnerName" value="@Model.OwnerName"
         style='width:300px;margin:auto' class="form-control"/>
        <span asp-validation-for="OwnerName" class="text-danger"></span>
    </div>
    <input type="hidden" name="Id" value="@Model.Id"/>
    <div style="margin-top:15px">
        <button type="submit" class="btn btn-success">Update</button>
    </div>
</form>