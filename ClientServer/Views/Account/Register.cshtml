@model RegisterViewModel
 @{
    ViewData["Title"] = "Register";
 }
<h2>Register</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="FirstName">first name</label><br />
        <input asp-for="FirstName" style='width:300px;' class="form-control" id="FirstName"/>
        <span asp-validation-for="FirstName"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName">Last name</label><br />
        <input asp-for="LastName" style='width:300px;' class="form-control" id="LastName"/>
        <span asp-validation-for="LastName"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserName">User name</label><br />
        <input asp-for="UserName" style='width:300px;' class="form-control" id="UserName"/>
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label><br />
        <input type="password" asp-for="Password" style='width:300px;' class="form-control" id="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label><br />
        <input asp-for="Email" style='width:300px;' class="form-control" id="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone number</label><br />
        <input asp-for="PhoneNumber" style='width:300px;' class="form-control" id="PhoneNumber"/>
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="~/Account/Login" class="navbar-brand" style="margin-left:25px;" >Login</a>
    </div>
</form>