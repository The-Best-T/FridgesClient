@using Entities.ViewModels.Account
@model LoginViewModel
 @{
    ViewData["Title"] = "Login";
 }
<h1>Login</h1>
<form method="post" asp-controller="Account" asp-action="Login">
    <div asp-validation-summary="ModelOnly" id="myCustomSummary" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserName">User name</label><br />
        <input asp-for="UserName" class="form-control" style="width: 300px; margin: auto"/>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group input-form">
        <label asp-for="Password"></label><br />
        <input type="password" asp-for="Password" class="form-control" style="width: 300px; margin: auto" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div style="margin-top:15px">
        <button type="submit" class="btn btn-primary">Sign In</button>
        <a href="~/Account/Register" class="navbar-brand" style="margin-left:25px" >Register</a>
    </div>
</form>