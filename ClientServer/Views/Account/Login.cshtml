@using Entities.ViewModels.Account
@model LoginViewModel
 @{
    ViewData["Title"] = "Login";
 }
<h1>Login</h1>
<form method="post" asp-controller="Account" asp-action="Login">
    <div asp-validation-summary="ModelOnly" id="myCustomSummary" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="UserName">User name</label><br />
        <input asp-for="UserName" class="form-control" style="width: 300px; margin: auto"/>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group input-form">
        <label asp-for="Password"></label><br />
        <input type="password" asp-for="Password" class="form-control" style="width: 300px; margin: auto" />
        <a class="navbar-brand" style=" margin-left:200px; font-size:14px" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Forget password?
        </a>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div style="margin-top:15px">
        <button type="submit" class="btn btn-primary">Sign In</button>
        <a href="~/Account/Register" class="navbar-brand" style="margin-left:25px" >Register</a>
    </div>
</form>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Forget Password?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
      <h5>Relax and try remember your password.</h5>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Thanks!</button>
      </div>
    </div>
  </div>
</div>