@model LoginViewModel
 @{
    ViewData["Title"] = "Login";
 }
<h2>Login</h2>
<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="UserName">User name</label><br />
        <input asp-for="UserName" style='width:300px;' class="form-control" id="UserName"/>
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label><br />
        <input type="password" asp-for="Password" style='width:300px;' class="form-control" id="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <button type="submit" class="btn btn-primary">Sign In</button>
        <a href="~/Account/Register" class="navbar-brand" style="margin-left:25px;" >Register</a>
    </div>
</form>