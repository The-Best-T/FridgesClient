@using Entities.ViewModels.FridgeModels
@model UpdateFridgeModelViewModel
 @{
    ViewData["Title"] = "Update fridge model";
 }
 <h1>Update model</h1>
<a asp-action="Model" asp-route-id="@Model.Id" style="margin-right:100%" 
     class="btn btn-primary">
     Back  
</a>
<form method="post" asp-controller="FridgeModels" asp-action="Update">
    <div asp-validation-summary="ModelOnly" id="myCustomSummary" class="text-danger" style="margin:auto"></div>
    <div class="form-group">
        <label asp-for="Name">Model name</label><br />
        <input asp-for="Name" value="@Model.Name"
         style='width:300px;margin:auto' class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year">Year</label><br />
        <input asp-for="Year" value="@Model.Year"
         style='width:300px;margin:auto' class="form-control"/>
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <input type="hidden" name="Id" value="@Model.Id"/>
    <div style="margin-top:15px">
        <button type="submit" class="btn btn-success">Update</button>
    </div>
</form>